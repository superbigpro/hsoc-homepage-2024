generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  STUDENT
  ADMIN
}

model user {
  id                 Int           @id @default(autoincrement())
  username           String        @unique
  name               String        @unique
  school_id          String        @unique
  password           String
  role               Role          @default(STUDENT)
  applicationsById   application[] @relation("UserById")
  applicationsByName application[] @relation("UserByName")
}

model application {
  id           Int      @id @default(autoincrement())
  phone_number String   @db.VarChar(20)
  introduce    String   @db.VarChar(1000)
  field        String   @db.VarChar(1000)
  portfolio    String   @db.VarChar(1000)
  created_at   DateTime @updatedAt

  // user 모델과의 관계를 정의합니다.
  userId   Int
  userById user @relation("UserById", fields: [userId], references: [id])

  userName   String
  userByName user   @relation("UserByName", fields: [userName], references: [username])
}
